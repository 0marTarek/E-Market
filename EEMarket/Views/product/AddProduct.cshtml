@model EEMarket.ViewModel.ProductCategoryView
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add_Product</h2>

@using (Html.BeginForm("AddProduct","product",FormMethod.Post,new {enctype="multipart/form-data" } ))
{
    <div class="form-group" style="margin-top:50px" >
        @Html.LabelFor(x => x.Product.Image)  
        
        <input type="file" name="upload" />
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Product.Name)
        @Html.TextBoxFor(m => m.Product.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.Price)
        @Html.TextBoxFor(m => m.Product.Price, new { @class = "form-control", Type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.Description)
        @Html.TextBoxFor(m => m.Product.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.CategoryId)
        @Html.DropDownListFor(m => m.Product.CategoryId, new SelectList(Model.category, "Id", "Name"), "Select Category", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Add</button>

}

